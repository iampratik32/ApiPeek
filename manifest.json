{
  "manifest_version": 2,
  "name": "API Monitor",
  "version": "1.0.1",
  "description": "Monitors API calls with status 200 for specified/all domains.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "mst_icon.png",
      "48": "mst_icon.png",
      "128": "mst_icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}